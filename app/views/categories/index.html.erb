<% if user_signed_in? %>
  <% @categories.each do |category| %>
    <%= link_to simple_format(category.name), category_path(category) %>
  <% end %>
 <% else %>
  <%= link_to "Sign in", new_user_session_path %> or <%= link_to "Sign up", new_user_registration_path %> to add and view blogs!
<% end %>

