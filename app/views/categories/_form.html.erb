
<h1>Add a New Category</h1>

<%= form_for @category do |f| %>
  <%- if @category.errors.size > 0 -%>
  <ul class="errors">
    <%- @category.errors.full_messages.each do |error| -%>
      <li><%= error %></li>
    <%- end -%>
  </ul>
<%- end -%>


  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

    <div>
    <%= f.submit 'Record', id: "record" %>
    </div>

<% end %>
